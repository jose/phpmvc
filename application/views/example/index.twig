      <ul class="nav nav-tabs">
        <li class="active"><a href="#test" aria-controls="test" role="tab" data-toggle="tab">{{ constant('SNIPPET') }}</a></li>
      </ul>
      <!-- Tab content -->
      <div class="tab-content">
